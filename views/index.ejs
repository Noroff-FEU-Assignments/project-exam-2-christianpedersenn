  <link rel="stylesheet" type="text/css" href="/assets/css/cookiealert.css">
</head>
<body class="">
  <div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-12 col-xl-8">
            <div class="header mt-md-5">
                <div class="header-body">
                    <div class="row align-items-end">
                        <div class="col">
                          <a href="" class="navbar-brand"><img src="/assets/images/relis_logo_blue.png" alt="" height="30px"></a>
                        </div>
                        <div class="col-auto">
                          <a type="button" class="btn btn-neutral btn-icon" data-toggle="modal" data-target="#modal-form">Subscribe to updates</a>

                              <a type="button" class="btn btn-neutral btn-icon" href="dashboard/" style="display: none;" id="dashboard">Dashboard</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="section bg-secondary">
        <div class="container">
            <div class="alert alert-success" role="alert" id="status-header" style="display:none;">
              <div id="status-text">All systems operational</div>
            </div> 
        </div>
      </section>
       <div class="accordion">
        <div class="container">
          <div class="row">
            <div class="col-md-12 ml-auto">
              <div class="accordion my-3" id="accordion">
              </div>
            </div>
          </div>
        </div>
      </div>
      <section class="section bg-secondary">
        <div class="container">
            <div class="alert alert-default" role="alert">
              <div id="">History</div> <br>
              <p>Coming soon, stay tuned!</p>
            </div> 
        </div>
      </section>      
        <footer class="footer">
          <div class="container">
            <hr>
            <div class="row align-items-center justify-content-md-between">
              <div class="col-md-6">
                <div class="copyright">
                  &copy; 2021 RELIS
                </div>
              </div>
              <div class="col-md-6">
                <ul class="nav nav-footer justify-content-end"></ul>
              </div>
            </div>
          </div>
        </footer>    
   </div>
    <div class="col-md-4">
        <div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content">
              <div class="modal-body p-0">
                <div class="card bg-secondary shadow border-0 mb-0">
                  <div class="card-header bg-white pb-3 subscribe-header">
                    <div class="text-muted text-center mb-3">
                      <h4 class="subscribe-title">Subscribe to updates</h4>
                    </div>
                  </div>
                  <div class="card-body px-lg-5 py-lg-5">
                    <p>Get email notifications whenever we create, update or resolve an incident.</p>
                    <br>
                    <form role="form">
                      <div class="form-group mb-3">
                        <div class="input-group input-group-alternative">
                          <div class="input-group-prepend">
                            <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                          </div>
                          <input class="form-control" placeholder="Email" type="email" id="email">
                        </div>
                      </div>
                      <br>
                    </form>
                    <div class="text-center">
                        <button class="btn btn-neutral btn-icon" id="subscribe_email">Subscribe via email
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" id="button_loader"></span>     
                        </button>
                      </div>                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    <div class="alert text-center cookiealert" role="alert">
      We use &#x1F36A; to ensure you get the best experience on our website. <a href="https://cookiesandyou.com/" target="_blank" class="cookie-link">Learn more</a>
      <button type="button" class="btn cookie-button btn-sm acceptcookies">
          I accept
      </button>
  </div>

  <script src="https://www.gstatic.com/firebasejs/7.14.2/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/7.14.2/firebase-firestore.js"></script>  
  <script src="https://www.gstatic.com/firebasejs/7.14.2/firebase-auth.js"></script>  
  <script src="https://www.gstatic.com/firebasejs/7.14.2/firebase-storage.js"></script>  
  <script src="/assets/js/core/jquery.min.js" type="text/javascript"></script>
  <script src="/assets/js/core/popper.min.js" type="text/javascript"></script>
  <script src="/assets/js/core/bootstrap.min.js" type="text/javascript"></script>
  <script src="/assets/js/plugins/moment.min.js"></script>
  <script src="/assets/js/cookie.min.js"></script>

  <script src="/assets/js/firebase_config.js" type="text/javascript"></script>  
  <script src="/assets/js/main.js" type="text/javascript"></script>
  <script src="/assets/js/moment.js" type="text/javascript"></script>
  <script src="/assets/js/cookiealert.js"></script> 
</body>

</html>